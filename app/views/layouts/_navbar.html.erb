- replace "nil" in "link_to" tags with actual paths 
- replace placeholder logo
-->

<nav class="navbar is-fixed-top is-primary" role="navigation" aria-label="main navigation">
<!-- left side -->
    <div class="navbar-brand">
        <!-- navbar logo -->
        <div class='navbar-item'>
            <%= image_tag 'https://bulma.io/images/bulma-logo.png', width: 112, height: 28, alt: 'example tag' %>
        </div>
        <!-- navbar burger -->
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

<!-- right side -->
    <div class="navbar-menu">
        <div class="navbar-start">
            <% if current_user %>
                <% if current_user.admin? %>
                    <div class="navbar-item">
                        <%= link_to userlist_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="people-outline"></ion-icon>
                            </span>
                            <span>All Users</span>
                        <% end %>
                    </div>

                    <div class="navbar-item">
                        <%= link_to pending_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="person-add-outline"></ion-icon>
                            </span>
                            <span>Pending Users</span>
                        <% end %>
                    </div>

                    <div class="navbar-item">
                        <%= link_to nil, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="person-remove-outline"></ion-icon>
                            </span>
                            <span>Rejected Users</span>
                        <% end %>
                    </div>
                <% elsif current_user.user? %>
                    <div class="navbar-item">
                        <%= link_to dashboard_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="podium-outline"></ion-icon>
                            </span>
                            <span>Dashboard</span>
                        <% end %>
                    </div>

                    <div class="navbar-item">
                        <%= link_to profile_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="person-outline"></ion-icon>
                            </span>
                            <span>Profile</span>
                        <% end %>
                    </div>

                    <div class="navbar-item">
                        <%= link_to portfolio_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="clipboard-outline"></ion-icon>
                            </span>
                            <span>Portfolio</span>
                        <% end %>
                    </div>

                    <div class="navbar-item">
                        <%= link_to transactions_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="receipt-outline"></ion-icon>
                            </span>
                            <span>Transactions</span>
                        <% end %>
                    </div>

                    <div class="navbar-item">
                        <%= link_to marketplace_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="storefront-outline"></ion-icon>
                            </span>
                            <span>Marketplace</span>
                        <% end %>
                    </div>

                    <div class="navbar-item">
                        <%= link_to products_path, class: "icon-text" do %>
                            <span class="icon">
                                <ion-icon name="bag-handle-outline"></ion-icon>
                            </span>
                            <span>Products</span>
                        <% end %>
                    </div>
                <% end %>
            <% end %>
        </div>

        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    <% if current_user %>
                        <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: 'button is-light' %>
                    <% else %>
                        <%= link_to "Sign Up", new_user_registration_path, class: "button is-light" %>
                        <%= link_to "Log In", new_user_session_path, class: "button is-light" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</nav>